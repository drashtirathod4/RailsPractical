<h1>List of Products</h1>

<table cellpadding="15px" border="1px">
  <% @products.each do |product| %>
    <tr>
      <td><b><%= link_to product.name, product_path(product)  %></b></td>
      <td><%= button_to "Edit", edit_product_path(product), method: :get %></td>
      <td><%= button_to 'Remove', product_path(product), method: 'delete' %></td>
    </tr>
  <% end %>
</table>
<br>
<%= button_to "Add new Product", new_product_path, method: :get%>
