<style>
    table {
        border: 1px solid black;
        border-collapse: collapse;
    }
    table,th,td {
        padding: 18px;
    }
    th {
        background: azure;
    }
</style>
<center><br><br>
    <table>
        <tr>
            <td><b>Employee Name</b></td>
            <td><b>Email</b></td>
            <td><b>Age</b></td>
            <td><b>No of Order</b></td>
            <td><b>Full Time</b></td>
            <td><b>Salary</b></td>
            <td><b>View</b></td>
            <td><b>Edit</b></td>
            <td><b>Remove</b></td>
        </tr>
        <tr>
            <th colspan = "9">List of Employees having age between 20 to 40</h3>
        </tr>
        <% Employee.where("age > 20").where("age < 40").each do |employee| %>
            <tr>
                <td><b><%= employee.first_name %> <%= employee.last_name %></b></td>
                <td><%= employee.email %></td>
                <td><%= employee.age %></td>
                <td><%= employee.no_of_order %></td>
                <td><%= employee.full_time_available %></td>
                <td><%= employee.salary %></td>
                <td><%= button_to "View", employee_path(employee), method: :get %></td>
                <td><%= button_to "Edit", edit_employee_path(employee), method: :get %></td>
                <td><%= button_to 'Remove', employee_path(employee), method: 'delete' %></td>
            </tr>
        <% end %>

        <tr>
            <th colspan = "9">List of Employees which are full time avilable</th>
        </tr>
        <% Employee.where(full_time_available: true).each do |employee| %>
            <tr>
                <td><b><%= employee.first_name %> <%= employee.last_name %></b></td>
                <td><%= employee.email %></td>
                <td><%= employee.age %></td>
                <td><%= employee.no_of_order %></td>
                <td><%= employee.full_time_available %></td>
                <td><%= employee.salary %></td>
                <td><%= button_to "View", employee_path(employee), method: :get %></td>
                <td><%= button_to "Edit", edit_employee_path(employee), method: :get %></td>
                <td><%= button_to 'Remove', employee_path(employee), method: 'delete' %></td>
            </tr>
        <% end %>

        <tr>
            <th colspan = "9">List of Employees which have exact 5 number of orders and age > 25</th>
        </tr>
        <% Employee.where("no_of_order = 5").where("age > 25").each do |employee| %>
            <tr>
                <td><b><%= employee.first_name %> <%= employee.last_name %></b></td>
                <td><%= employee.email %></td>
                <td><%= employee.age %></td>
                <td><%= employee.no_of_order %></td>
                <td><%= employee.full_time_available %></td>
                <td><%= employee.salary %></td>
                <td><%= button_to "View", employee_path(employee), method: :get %></td>
                <td><%= button_to "Edit", edit_employee_path(employee), method: :get %></td>
                <td><%= button_to 'Remove', employee_path(employee), method: 'delete' %></td>
            </tr>
        <% end %>

        <tr>
            <th colspan = "9">List of Employees which are created before today</th>
        </tr>
        <% Employee.where("created_at < ?", Time.zone.now.beginning_of_day).each do |employee| %>
            <tr>
                <td><b><%= employee.first_name %> <%= employee.last_name %></b></td>
                <td><%= employee.email %></td>
                <td><%= employee.age %></td>
                <td><%= employee.no_of_order %></td>
                <td><%= employee.full_time_available %></td>
                <td><%= employee.salary %></td>
                <td><%= button_to "View", employee_path(employee), method: :get %></td>
                <td><%= button_to "Edit", edit_employee_path(employee), method: :get %></td>
                <td><%= button_to 'Remove', employee_path(employee), method: 'delete' %></td>
            </tr>
        <% end %>

        <tr>
            <th colspan = "9">List of Employees which have exact 5 number of orders or age < 25</th>
        </tr>
        <% Employee.where("no_of_order = 5").or(Employee.where("age < 25")).each do |employee| %>
            <tr>
                <td><b><%= employee.first_name %> <%= employee.last_name %></b></td>
                <td><%= employee.email %></td>
                <td><%= employee.age %></td>
                <td><%= employee.no_of_order %></td>
                <td><%= employee.full_time_available %></td>
                <td><%= employee.salary %></td>
                <td><%= button_to "View", employee_path(employee), method: :get %></td>
                <td><%= button_to "Edit", edit_employee_path(employee), method: :get %></td>
                <td><%= button_to 'Remove', employee_path(employee), method: 'delete' %></td>
            </tr>
        <% end %>

        <tr>
            <th colspan = "9">List of Employees in descending order by age</th>
        </tr>
        <% Employee.order(age: :desc).each do |employee| %>
            <tr>
                <td><b><%= employee.first_name %> <%= employee.last_name %></b></td>
                <td><%= employee.email %></td>
                <td><%= employee.age %></td>
                <td><%= employee.no_of_order %></td>
                <td><%= employee.full_time_available %></td>
                <td><%= employee.salary %></td>
                <td><%= button_to "View", employee_path(employee), method: :get %></td>
                <td><%= button_to "Edit", edit_employee_path(employee), method: :get %></td>
                <td><%= button_to 'Remove', employee_path(employee), method: 'delete' %></td>
            </tr>
        <% end %>

        <tr>
            <th colspan = "9">List of Employees in ascending order by number of order</th>
        </tr>
        <% Employee.order(:no_of_order).each do |employee| %>
            <tr>
                <td><b><%= employee.first_name %> <%= employee.last_name %></b></td>
                <td><%= employee.email %></td>
                <td><%= employee.age %></td>
                <td><%= employee.no_of_order %></td>
                <td><%= employee.full_time_available %></td>
                <td><%= employee.salary %></td>
                <td><%= button_to "View", employee_path(employee), method: :get %></td>
                <td><%= button_to "Edit", edit_employee_path(employee), method: :get %></td>
                <td><%= button_to 'Remove', employee_path(employee), method: 'delete' %></td>
            </tr>
        <% end %>

        <tr>
            <th colspan = "9">List of Employees having salary > 45000</th>
        </tr>
        <% Employee.group("salary").having("salary > 45000").each do |employee| %>
            <tr>
                <td><b><%= employee.first_name %> <%= employee.last_name %></b></td>
                <td><%= employee.email %></td>
                <td><%= employee.age %></td>
                <td><%= employee.no_of_order %></td>
                <td><%= employee.full_time_available %></td>
                <td><%= employee.salary %></td>
                <td><%= button_to "View", employee_path(employee), method: :get %></td>
                <td><%= button_to "Edit", edit_employee_path(employee), method: :get %></td>
                <td><%= button_to 'Remove', employee_path(employee), method: 'delete' %></td>
            </tr>
        <% end %>

        <tr>
            <th colspan = "9">Group of employees by no_of_order and employees with no_of_order > 5</th>
        </tr>
        <% Employee.group(:no_of_order).having("no_of_order > 5").each do |employee| %>
            <tr>
                <td><b><%= employee.first_name %> <%= employee.last_name %></b></td>
                <td><%= employee.email %></td>
                <td><%= employee.age %></td>
                <td><%= employee.no_of_order %></td>
                <td><%= employee.full_time_available %></td>
                <td><%= employee.salary %></td>
                <td><%= button_to "View", employee_path(employee), method: :get %></td>
                <td><%= button_to "Edit", edit_employee_path(employee), method: :get %></td>
                <td><%= button_to 'Remove', employee_path(employee), method: 'delete' %></td>
            </tr>
        <% end %>

        <tr>
            <th colspan = "9">Unscope Example to remove limit condition</th>
        </tr>
        <% Employee.where('no_of_order <= 5').order(:no_of_order).limit(3).unscope(:limit).each do |employee| %>
            <tr>
                <td><b><%= employee.first_name %> <%= employee.last_name %></b></td>
                <td><%= employee.email %></td>
                <td><%= employee.age %></td>
                <td><%= employee.no_of_order %></td>
                <td><%= employee.full_time_available %></td>
                <td><%= employee.salary %></td>
                <td><%= button_to "View", employee_path(employee), method: :get %></td>
                <td><%= button_to "Edit", edit_employee_path(employee), method: :get %></td>
                <td><%= button_to 'Remove', employee_path(employee), method: 'delete' %></td>
            </tr>
        <% end %>

        <tr>
            <th colspan = "9">Only Example to remove limit condition</th>
        </tr>
        <% Employee.where('no_of_order <= 5').order(:no_of_order).limit(3).only(:where, :order).each do |employee| %>
            <tr>
                <td><b><%= employee.first_name %> <%= employee.last_name %></b></td>
                <td><%= employee.email %></td>
                <td><%= employee.age %></td>
                <td><%= employee.no_of_order %></td>
                <td><%= employee.full_time_available %></td>
                <td><%= employee.salary %></td>
                <td><%= button_to "View", employee_path(employee), method: :get %></td>
                <td><%= button_to "Edit", edit_employee_path(employee), method: :get %></td>
                <td><%= button_to 'Remove', employee_path(employee), method: 'delete' %></td>
            </tr>
        <% end %>

        <tr>
            <th colspan = "9">Reselect Employee's first name , last name and full time available</th>
        </tr>
        <% Employee.select(:salary).reselect(:id, :first_name, :last_name, :full_time_available).each do |employee| %>
            <tr>
                <td><b><%= employee.first_name %> <%= employee.last_name %></b></td>
                <td></td>
                <td></td>
                <td></td>
                <td><%= employee.full_time_available %></td>
                <td></td>
                <td><%= button_to "View", employee_path(employee), method: :get %></td>
                <td><%= button_to "Edit", edit_employee_path(employee), method: :get %></td>
                <td><%= button_to 'Remove', employee_path(employee), method: 'delete' %></td>
            </tr>
        <% end %>

        <tr>
            <th colspan = "9">Reorder Employees in ascending order by salary</th>
        </tr>
        <% Employee.order('first_name desc').reorder('salary').each do |employee| %>
            <tr>
                <td><b><%= employee.first_name %> <%= employee.last_name %></b></td>
                <td><%= employee.email %></td>
                <td><%= employee.age %></td>
                <td><%= employee.no_of_order %></td>
                <td><%= employee.full_time_available %></td>
                <td><%= employee.salary %></td>
                <td><%= button_to "View", employee_path(employee), method: :get %></td>
                <td><%= button_to "Edit", edit_employee_path(employee), method: :get %></td>
                <td><%= button_to 'Remove', employee_path(employee), method: 'delete' %></td>
            </tr>
        <% end %>

        <tr>
            <th colspan = "9">Reverse order of employees whose id is greater than 5</th>
        </tr>
        <% Employee.where("id > 5").reverse_order.each do |employee| %>
            <tr>
                <td><b><%= employee.first_name %> <%= employee.last_name %></b></td>
                <td><%= employee.email %></td>
                <td><%= employee.age %></td>
                <td><%= employee.no_of_order %></td>
                <td><%= employee.full_time_available %></td>
                <td><%= employee.salary %></td>
                <td><%= button_to "View", employee_path(employee), method: :get %></td>
                <td><%= button_to "Edit", edit_employee_path(employee), method: :get %></td>
                <td><%= button_to 'Remove', employee_path(employee), method: 'delete' %></td>
