<h1 align="center">List of Books</h1>

<table align="center" cellpadding="15px" border="1px">
  <tr>
      <td><b>Book Name</b></td>
      <td><b>Book Price</b></td>
      <td><b>Author Name</b></td>
      <td><b>Author DOB</b></td>
      <td><b>Author Email</b></td>
      <td><b>View</b></td>
      <td><b>Edit</b></td>
      <td><b>Remove</b></td>
    </tr>
  <% @books.each do |book| %>
    <tr>
      <td><b><%= book.name%></b></td>
      <td><%= book.price %></td>
      <td><%= book.author.fname %> <%= book.author.lname %></td>
      <td><%= book.author.dob %></td>
      <td><%= book.author.email %></td>
      <td><%= button_to "View", book_path(book), method: :get %></td>
      <td><%= button_to "Edit", edit_book_path(book), method: :get %></td>
      <td><%= button_to 'Remove', book_path(book), method: 'delete' %></td>
    </tr>
  <% end %>
  <tr>
    <td colspan="8" align="center"><%= button_to "Add new Book", new_book_path, method: :get%></td>
  </tr>
</table>
<br>
