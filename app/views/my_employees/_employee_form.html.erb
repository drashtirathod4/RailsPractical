<% if flash[:errors] %>
    <% flash[:errors].each do |error| %>
      <p style = "color:red"><%= error %></p>
    <% end %>
<% end %>
  
<%= form_with(model: @employee) do |e| %>
    <table cellpadding="15px">
        <tr>
            <td><%= e.label :employee_name %></td>
            <td><%= e.text_field :employee_name %></td>
        </tr>
        <tr>
            <td><%= e.label :email %></td>
            <td><%= e.email_field :email %></td>
        </tr>
        <tr>
            <td><%= e.label :password %></td>
            <td><%= e.password_field :password %></td>
        </tr>
        <tr>
            <td><%= e.label :gender %></td>
            <td>
                <%= e.radio_button :gender, "male" %>
                <%= e.label :gender_male, "Male" %> &nbsp;&nbsp;
                <%= e.radio_button :gender, "female" %>
                <%= e.label :gender_female, "Female" %>
            </td>
        </tr>
        <tr>
            <td><%= e.label :hobbies %></td>
            <td>
                <%= e.check_box :hobbies, {multiple: true}, "Reading",false %>
                <%= e.label "Reading" %> &nbsp;&nbsp;
                <%= e.check_box :hobbies, {multiple: true}, "Singing",false %>
                <%= e.label "Singing" %> &nbsp;&nbsp;
                <%= e.check_box :hobbies, {multiple: true}, "Dancing",false %>
                <%= e.label "Dancing" %>
            </td>
        </tr>
        <tr>
            <td><%= e.label :address %></td>
            <td><%= e.text_area :address %></td>
        </tr>
        <%= e.fields_for :emp_addresses do |address| %>
            <tr>
                <td><%= address.label :house_name %></td>
                <td><%= address.text_field :house_name %></td>
            </tr>
            <tr>
                <td><%= address.label :street_name %></td>
                <td><%= address.text_field :street_name %></td>
            </tr>
            <tr>
                <td><%= address.label :road %></td>
                <td><%= address.text_field :road %></td>
            </tr>
        <% end %>
        <tr>
            <td><%= e.label :mobile_number %></td>
            <td><%= e.number_field :mobile_number %></td>
        </tr>
        <tr>
            <td><%= e.label :birth_date %></td>
            <td><%= e.date_field :birth_date %></td>
        </tr>
        <tr>
            <td><%= e.label :document %></td>
            <td><%= e.file_field :document %></td>
        </tr>
        <tr>
            <td><%= e.submit %></td>
        </tr>
        <tr>
            <td><b><%= link_to "Back", my_employees_path %></b></td>
        </tr>
    </table>
<% end %>
