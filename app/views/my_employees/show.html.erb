<center>
    <h1>Employee Details</h1><br>
    <h2><%= @employee.employee_name %></h2><br>
    <table cellpadding="14px">
        <tr>
            <td><b>Employee Name : </b></td>
            <td><%= @employee.employee_name %></td>
        </tr>
        <tr>
            <td><b>Email : </b></td>
            <td><%= @employee.email %></td>
        </tr>
        <tr>
            <td><b>Gender : </b></td>
            <td><%= @employee.gender %></td>
        </tr>
        <tr>
            <td><b>Hobbies : </b></td>
            <td><%= @employee.hobbies %></td>
        </tr>
        <tr>
            <td><b>Address : </b></td>
            <td><%= @employee.address %></td>
        </tr>
        <tr>
            <td><b>House Name : </b></td>
            <td><%= @employee.emp_addresses.first.house_name %></td>
        </tr>
        <tr>
            <td><b>Street Name : </b></td>
            <td><%= @employee.emp_addresses.first.street_name %></td>
        </tr>
        <tr>
            <td><b>Road : </b></td>
            <td><%= @employee.emp_addresses.first.road %></td>
        </tr>
        <tr>
            <td><b>Mobile Number : </b></td>
            <td><%= @employee.mobile_number %></td>
        </tr>
        <tr>
            <td><b>Birth Date : </b></td>
            <td><%= @employee.birth_date %></td>
        </tr>
        <tr>
            <td><b>Document : </b></td>
            <td>
                <% if @employee.document.attached? %>
                    <%= image_tag @employee.document, style: "width: 100px; display: block:" %>
                <% end %>
            </td>
        </tr>
    </table><br>
    <b><%= link_to "Back", my_employees_path %></b>
</center>
