<center>
    <h1>List of Most saled Products by sum of Quantity</h1><br>
    <table cellpadding="15px" border="1px">
        <tr>
            <th>Customer Name</th>
            <th>Customer Email</th>
            <th>Customer Phone</th>
            <th>Sum of Quantity</th>
        </tr>
        <% @orders.each do |order| %>
            <tr>
                <td><b><%= order.customer.fname %> <%= order.customer.lname %></b></td>
                <td><%= order.customer.email %></td>
                <td><%= order.customer.phone %></td>
                <td><%= Order.where(customer_id: order.customer_id).sum(:quantity) %></td>
            </tr>
        <% end %>
        <tr>
            <td colspan="4" align="center"><%= button_to "Add new Order", new_order_path, method: :get %></td>
        </tr>
    </table><br><br>
    <b><%= link_to "Back", orders_path %></b>
</center>
