<center>
    <h1>Filter Orders by Status</h1>
    <%= form_tag orders_filtered_data_path, method: :get do %>
        <table cellpadding = "15px">
            <tr>
                <td><b>Search Order by Status : </b></td>
                <td><%= text_field_tag :status_search, params[:status_search] %></td>
                <td><%= submit_tag "Search" %></td>
                <td><%= link_to "Back", orders_filtered_data_path, method: :get %></td>
            </tr>
        </table>
    <% end %>

    <table cellpadding="15px" border="1px">
        <tr>
            <th>Order Id</th>
            <th>Product Name</th>
            <th>Customer Name</th>
            <th>Customer Email</th>
            <th>Customer Phone</th>
            <th>Quantity</th>
            <th>Total Price</th>
            <th>Status</th>
            <th>View</th>
            <th>Edit</th>
            <th>Remove</th>
        </tr>
        <% @orders.each do |order| %>
            <tr>
                <td><b><%= order.id %></b></td>
                <td><b><%= order.product.title %></b></td>
                <td><b><%= order.customer.fname %> <%= order.customer.lname %></b></td>
                <td><%= order.customer.email %></td>
                <td><%= order.customer.phone %></td>
                <td><%= order.quantity %></td>
                <td><%= order.total_price %></td>
                <td><%= order.status.capitalize %></td>
                <td><%= button_to "View", order_path(order), method: :get %></td>
                <td><%= button_to "Edit", edit_order_path(order), method: :get %></td>
                <td><%= button_to 'Remove', order_path(order), method: 'delete' %></td>
            </tr>
        <% end %>
        <tr>
            <td colspan="11" align="center"><%= button_to "Add new Order", new_order_path, method: :get %></td>
        </tr>
    </table><br><br>
    <b><%= link_to "Back", orders_path %></b><br><br>
</center>
