<center>
    <h1>Most Booked Order of product</h1><br>
    <table cellpadding="15px" border="1px">
        <tr>
            <th>Customer Name</th>
            <th>Customer Email</th>
            <th>Customer Phone</th>
            <th>Status</th>
            <th>Booked Status Count</th>
        </tr>
        <% @orders.each do |order| %>
            <tr>
                <td><b><%= order.customer.fname %> <%= order.customer.lname %></b></td>
                <td><%= order.customer.email %></td>
                <td><%= order.customer.phone %></td>
                <td><%= order.status.capitalize %></td>
                <td><%= Order.where(customer: order.customer_id, status: order.status).count(:status) %></td>
            </tr>
        <% end %>
        <tr>
            <td colspan="5" align="center"><%= button_to "Add new Order", new_order_path, method: :get %></td>
        </tr>
    </table><br><br>
    <b><%= link_to "Back", orders_path %></b>
</center>
