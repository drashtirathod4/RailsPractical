<center>
    <h1>Register in Event</h1>

    <%if flash[:errors] %>
        <% flash[:errors].each do |error| %>
            <p style = "color:red"><%= error %></p>
        <% end %>
    <% end %>
    
    <%= form_for @register do |e| %>
        <table cellpadding="15px">
            <tr>
                <td><%= e.hidden_field :user_id, :readonly => true %></td>
            </tr>
            <tr>
                <td><%= e.label :event %></td>
                <td><%= e.collection_select :event_id, Event.all, :id, :name %></td>
            </tr>
            <tr>
                <td><%= e.submit %></td>
            </tr>
            <tr>
                <td><b><%= link_to "Back", welcome_path %></b></td>
            </tr>
        </table>
    <% end %>
</center>
