<center>
  <h1>List of Products</h1><br>
    <table cellpadding="15px" border="1px">
        <tr>
            <th>Product Name</th>
            <th>Description</th>
            <th>Order</th>
            <th>Price</th>
            <th>View</th>
            <th>Edit</th>
            <th>Remove</th>
        </tr>
        <% @my_products.each do |product| %>
            <tr>
                <td><b><%= product.title %></b></td>
                <td><%= product.description %></td>
                <td><%= product.price %></td>
                <td><%= button_to "Order", new_my_product_my_order_path(product), method: :get %></td>
                <td><%= button_to "View", my_product_path(product), method: :get %></td>
                <td><%= button_to "Edit", edit_my_product_path(product), method: :get %></td>
                <td><%= button_to 'Remove', my_product_path(product), method: 'delete' %></td>
            </tr>
        <% end %>
        <tr>
            <td colspan="7" align="center"><%= button_to "Add new Product", new_my_product_path, method: :get %></td>
        </tr>
    </table>
</center>
