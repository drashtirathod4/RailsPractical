<center>
  <h1>Edit Product Details</h1>

  <% if flash[:errors] %>
    <% flash[:errors].each do |error| %>
      <p style = "color:red"><%= error %></p>
    <% end %>
  <% end %>
  
  <%= form_for @category do |c| %>
    <table cellpadding="15px">
      <tr>
        <td><%= c.label :name %></td>
        <td><%= c.text_field :name %></td>
      </tr>
      <tr>
        <td><%= c.submit %></td>
      </tr>
      <tr>
        <td><b><%= link_to "Back", categories_path %></b></td>
      </tr>
    </table>
  <% end %>
</center>
