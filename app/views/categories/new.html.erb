<center>
  <h1>Add Category</h1>
  <% if flash[:errors] %>
    <% flash[:errors].each do |error| %>
      <p style = "color:red"><%= error %></p>
    <% end %>
  <% end %>
  
  <%= form_for @category do |p| %>
    <table cellpadding="15px">
      <tr>
        <td><%= p.label :name %></td>
        <td><%= p.text_field :name %></td>
      </tr>
      <tr>
        <td><%= p.submit %></td>
      </tr>
      <tr>
        <td><b><%= link_to "Back", categories_path %></b></td>
      </tr>
    </table>
  <% end %>
</center>
