<center>
    <h1>Edit Student Details</h1>

    <%if flash[:errors] %>
        <% flash[:errors].each do |error| %>
            <p style = "color:red"><%= error %></p>
        <%end%>
    <%end%>

    <%= form_for @student do |f| %>
        <table cellpadding="15px">
            <tr>
                <td><%= f.label :first_Name %></td>
                <td><%= f.text_field :first_name %></td>
            </tr>
            <tr>
                <td><%= f.label :last_Name %></td>
                <td><%= f.text_field :last_name %></td>
            </tr>
            <tr>
                <td><%= f.label :DOB %></td>
                <td><%= f.date_field :dob %></td>
            </tr>
            <tr>
                <td><%= f.label :Department %></td>
                <td><%= f.text_field :department %> &nbsp;IT / CE</td>
            </tr>
            <tr>
                <td>
                    <%= f.check_box :terms_of_usage, {}, true, false %>
                    <%= f.label "I agree to the terms of usage." %>
                </td>
            </tr>
            <tr>
                <td><%= f.submit %></td>
            </tr>
            <tr>
                <td><b><%= link_to "Back", students_path %></b></td>
            </tr>
        </table>
    <%end%>
</center>
